<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Style for a category of vocabulary words -->
    <style name="CategoryStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/list_item_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="history" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">#FF00FF</item>
    </style>
    <style name="levels" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">#CDDC39</item>
    </style>
    <style name="playing" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">#727272</item>
    </style>
    <style name="search" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">#8BC34A</item>
    </style>
    <style name="instruments" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">#AFB42B</item>
    </style>
    <style name="main" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">#795548</item>
    </style>
    <style name="text_paragraph">
        <item name="android:layout_margin">14dp</item>
        <item name="android:textSize">14sp</item>
    </style>


</resources>
